import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-primary dark:text-white highlight">Ohio Windows & More</span>
    </Fragment>

    <Fragment slot="subtitle">
      With over 30 years of experience in the construction field, Ohio Windows & More brings the expertise, simplicity,
      and satisfaction you need right to your front door. Locally owned and operated, our team of skilled craftsmen are
      dedicated to delivering top-notch carpentry services, from replacement windows to siding to roofing, we tailor
      everything to meet your unique needs. Whether youâ€™re renovating your home or embarking on a new construction
      project, you can trust Ohio Windows & More to enhance the beauty and functionality of your spaces with precision
      and care. Let us turn your vision into reality with our unparalleled craftsmanship and dedication to excellence.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

