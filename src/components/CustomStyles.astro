---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Nunito';
    --aw-font-serif: 'Nunito';
    --aw-font-heading: 'Nunito';

    /* Primary Colors */
    --aw-color-primary: rgb(189, 106, 106); /* Soft crimson */
    --aw-color-secondary: rgb(193, 14, 14); /* Bold deep red */
    --aw-color-accent: rgb(255, 187, 59); /* Gold for contrast */

    /* Text Colors */
    --aw-color-text-heading: rgb(20, 20, 20); /* Dark gray for headings */
    --aw-color-text-default: rgb(45, 45, 45); /* Default text */
    --aw-color-text-muted: rgb(45, 45, 45 / 66%); /* Muted text */

    /* Background Colors */
    --aw-color-bg-page: rgb(250, 245, 245); /* Light crimson tint for the background */
    --aw-color-bg-page-dark: rgb(41, 0, 0); /* Dark red for dark mode background */

    /* Selection Colors */
    ::selection {
      background-color: rgb(193, 14, 14); /* Bold deep red */
      color: snow;
    }
  }

  .dark {
    --aw-font-sans: 'Nunito';
    --aw-font-serif: 'Nunito';
    --aw-font-heading: 'Nunito';

    /* Dark Mode Primary Colors */
    --aw-color-primary: rgb(189, 106, 106); /* Same soft crimson */
    --aw-color-secondary: rgb(193, 14, 14); /* Same bold deep red */
    --aw-color-accent: rgb(255, 140, 50); /* Warmer gold for dark mode contrast */

    /* Text Colors */
    --aw-color-text-heading: rgb(240, 240, 240); /* Light gray for headings */
    --aw-color-text-default: rgb(220, 220, 220); /* Default light text */
    --aw-color-text-muted: rgb(220, 220, 220 / 66%); /* Muted light text */

    /* Background Colors */
    --aw-color-bg-page: rgb(43, 43, 43); /* Dark red for main background */
    --aw-color-bg-page-dark: rgb(20, 0, 0); /* Even darker red for deep contrast */

    /* Selection Colors */
    ::selection {
      background-color: rgb(189, 106, 106); /* Gold for selection */
      color: rgb(41, 0, 0); /* Dark red text */
    }
  }
</style>
